<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondActivity"
    tools:layout_editor_absoluteY="81dp">

    <EditText
        android:id="@+id/txtvalue"
        android:layout_width="320dp"
        android:layout_height="86dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:ems="10"
        android:inputType="text"
        android:textColor="@android:color/black"
        android:textCursorDrawable="@drawable/mycursor_drawable"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/spnconvert"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:hint="Value" />

    <Button
        android:id="@+id/btnCompute"
        android:layout_width="199dp"
        android:layout_height="77dp"
        android:background="@color/colorPrimaryDark"
        android:onClick="btnCompClick"
        android:text="Compute"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/spnconvert"
        app:layout_constraintStart_toStartOf="@+id/spnconvert"
        app:layout_constraintTop_toBottomOf="@+id/spnconvert" />

    <Spinner
        android:id="@+id/spnconvert"
        android:layout_width="273dp"
        android:layout_height="86dp"
        app:layout_constraintBottom_toTopOf="@+id/btnCompute"
        app:layout_constraintEnd_toEndOf="@+id/txtvalue"
        app:layout_constraintStart_toStartOf="@+id/txtvalue"
        app:layout_constraintTop_toBottomOf="@+id/txtvalue" />
</android.support.constraint.ConstraintLayout>